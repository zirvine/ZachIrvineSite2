@{
}

@model GradeCalcClass

<br />
<br />

<div class="box">
    <br /><br />
    <p id="results"></p>
    <form method="post">
        <label>Enter the score you received for all your assignments (percentage): </label>
        <input id="assignments" asp-for="Assignments" /> <br />
        <label>Enter the score you received for all your group projects (percentage): </label>
        <input id="groupProjects" asp-for="GroupProjects"/> <br />
        <label>Enter the score you received for all your quizzes (percentage): </label>
        <input id="quizzes" asp-for="Quizzes" /> <br />
        <label>Enter the score you received for your Midterm Exam (percentage): </label>
        <input id="midterm" asp-for="Midterm"/> <br />
        <label>Enter the score you received for your Final Exam (percentage): </label>
        <input id="final" asp-for="Final" /> <br />
        <label>Enter the score you received for your INTEX Project (percentage): </label>
        <input id="intex" asp-for="Intex" /> <br />
        <input id="submitScores" type="submit" value="Submit Scores" />

        <div asp-validation-summary="All"></div>
    </form>
    <br /><br />
</div>

<br />
<br />
<script src="js/JavaScript.js"></script>